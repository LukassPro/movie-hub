<body>
    <h1>Welcome to Movie Hub</h1>
    <div class="movie-container" id="movieContainer"></div>

    <script>
        const movies = [
            { title: "Inception", description: "A mind-bending thriller about dreams.", image: "https://image.tmdb.org/t/p/w500/qmDpIHrmpJINaRKAfWQfftjCdyi.jpg", link: "https://www.imdb.com/title/tt1375666/" },
            { title: "Interstellar", description: "A journey beyond the stars.", image: "https://image.tmdb.org/t/p/w500/gEU2QniE6E77NI6lCU6MxlNBvIx.jpg", link: "https://www.imdb.com/title/tt0816692/" },
            { title: "The Dark Knight", description: "The rise of the legendary Batman.", image: "https://image.tmdb.org/t/p/w500/qJ2tW6WMUDux911r6m7haRef0WH.jpg", link: "https://www.imdb.com/title/tt0468569/" },
            { title: "Avengers: Endgame", description: "The ultimate superhero battle.", image: "https://image.tmdb.org/t/p/w500/or06FN3Dka5tukK1e9sl16pB3iy.jpg", link: "https://www.imdb.com/title/tt4154796/" }
        ];

        const container = document.getElementById("movieContainer");
        movies.forEach(({ title, description, image, link }) => {
            const movieDiv = document.createElement("div");
            movieDiv.classList.add("movie");
            movieDiv.innerHTML = `
                <img src="${image}" alt="${title} Poster">
                <h2>${title}</h2>
                <p>${description}</p>
                <button onclick="window.open('${link}', '_blank', 'noopener,noreferrer')">More Info</button>
            `;
            container.appendChild(movieDiv);
        });
    </script>
